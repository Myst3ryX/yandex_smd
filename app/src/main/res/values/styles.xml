<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/main_gradient_bg</item>
        <item name="editTextStyle">@style/WhiteEditText</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!--Text styles-->

    <style name="TextStyleDark">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/charcoal_grey</item>
    </style>

    <style name="TextStyleDark.Bold" parent="TextStyleDark">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleLight">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyleLight.Bold" parent="TextStyleLight">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="WhiteTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProgressBar" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <!--Operation type radio button-->
    <style name="RadioIncome" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:drawableTop">@drawable/radio_income</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RadioExpanse" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:drawableTop">@drawable/radio_expanse</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--Operation type radio button-->

    <!--White edit text-->
    <style name="WhiteEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/white_edit_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor_white</item>
    </style>
    <!--White edit text-->


    <style name="FullScreenDialog" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
